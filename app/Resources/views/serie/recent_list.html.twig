{% for serie in series %}

    <div class="col-lg-4">
        <img align="left" id="posterHome" src="{{ asset ('bundles/appBundle/images/' ~ serie.poster)}}" alt="{{ serie.title }}"><br/>
            <strong>Posté le {{ serie.date }} par {{ serie.author }} :</strong>
        {{ serie.summary | slice(0,140) }}...
        <a href="/serie/{{ serie.id }}">Voir le détail
        </a>

    </div>
{% endfor %}
