{% for serie in series %}

    <div class="col-lg-4">
        <a href="{{ path('serie_show', {'id':serie.id}) }}" class="titleHome">
            <img align="left" id="posterHome" src="{{ asset( '/images/'~ serie.poster)}}" alt="{{ serie.title }}"><br/>
        <h3 id="serieTitleHome">{{ serie.title }}</h3>
        </a>
        <strong>Proposée le {{ serie.date }} par {{ serie.author }} :</strong>
        {{ serie.summary | slice(0,140) }}...
        <p><a href="{{ path('serie_show', {'id':serie.id}) }}">Voir la série</a></p>
    </div>
{% endfor %}
