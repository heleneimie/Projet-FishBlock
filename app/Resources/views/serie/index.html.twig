{% extends 'base.html.twig' %}

{% block body %}

    <!-- Barre de recherche centrale -->
    {% block navbar_central %}
        {% include 'navbar_central.html.twig' %}
    {% endblock %}

    <!-- Affichage conditionnel bouton Proposer une série, si user connecté -->
    {% if app.user.username is defined %}
        <a href="{{ path('serie_new') }}">
            <button type="button" class="btn btn-default btn-lg propSerieBtn">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Proposer une nouvelle série
            </button>
        </a>
    {% endif %}

    <h1>Dernières séries</h1>

    {% for serie in series %}
        <div class="col-lg-4 serieBlock">
            <a href="{{ path('serie_show', { 'id': serie.id }) }}">
                <div class="seriePoster text-center">
                    <figure>
                        {# Ajouter {{ serie.poster }} à la place de src='' #}
                        <img align="center" id="posterSeries" src="{{ asset(serie.poster)}}" alt="{{ serie.title }}"><br/>
                    </figure>
                </div>
                <div class="serieTitle text-center">
                    <h4>{{ serie.title }}</h4>
                </div>
            </a>
        </div>

    {% endfor %}

    <!-- Forum -->
    {% block forum %}
        {% include 'forum.html.twig' %}
    {% endblock %}

{% endblock %}

