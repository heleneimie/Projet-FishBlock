<!-- Timeline header - Series -->
<div class="container-fluid central timelineSerieHeader">
    <div class="col-lg-12 ">
        <div id="imaginary_container">
            <div class="input-group stylish-input-group">
                <div class="col-lg-4">

                    <!-- Poster de la série -->
                    <img align="center" id="imageTimeline" src="{{ asset('/images/' ~ serie.poster)}}" alt="{{ serie.title }}">

                    <!-- Bouton pour suivre la série -->
                    {% if app.user.id is defined %}
                        <a href="{{ path('follow_serie', { 'id': serie.id }) }}">
                            <button type="button" class="btn btn-default btn-lg buttonTimeline">
                                <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> Suivre la série
                            </button>
                        </a>
                    {% endif %}
                </div>

                <!-- Titre de la série -->
                <div class="col-lg-8">
                    <h1 class="timelineTitle">{{ serie.title }}</h1>

                    <!-- Note de la série (étoiles) -->
                    <div class="starsNote">
                        {% for i in 0..serie.note %}
                            <span class="glyphicon glyphicon-star"></span>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>