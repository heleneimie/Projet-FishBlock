{% extends 'base.html.twig' %}

{% block body %}
    <h1>Episode</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Titre de l'épisode</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Date de diffusion</th>
                <td>{% if episode.airdate %}{{ episode.airdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Durée (min)</th>
                <td>{{ episode.length }}</td>
            </tr>
            <tr>
                <th>Saison</th>
                <td>{{ episode.season }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.summary }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ episode.note }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('episode_index') }}">Retour à la liste des épisodes</a>
        </li>
        <li>
            <a href="{{ path('episode_edit', { 'id': episode.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
