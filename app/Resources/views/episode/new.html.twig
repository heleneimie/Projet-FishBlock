{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ajouter un épisode à la série</h1>

    {{ form_start(form) }}
        {{ form_row(form.title, {'label': 'Titre de l\'épisode'}) }}
        {{ form_row(form.airdate, {'label': 'Date'}) }}
        {{ form_row(form.season, {'label': 'Saison'}) }}
        {{ form_row(form.summary, {'label': 'Synopsis'}) }}
        {#{{ form_row(form.serie, {'label': 'Série'}) }}#}
        <input type="submit" value="Proposer" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('episode_index') }}">Retour à la liste des épisodes</a>
        </li>
    </ul>
{% endblock %}
